{
  "name": "alexa-llm-chat",
  "version": "1.0.0",
  "description": "Alexa skill for LLM chat using OpenRouter API",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "sam:build": "sam build",
    "sam:deploy:dev": "sam deploy --config-env dev",
    "sam:deploy:staging": "sam deploy --config-env staging",
    "sam:deploy:prod": "sam deploy --config-env prod",
    "sam:local": "sam local start-api",
    "sam:logs": "sam logs -n AlexaLLMChatFunction --stack-name alexa-llm-chat-dev --tail",
    "validate:deployment": "node scripts/validate-deployment.js",
    "skill:deploy:dev": "./scripts/deploy-skill.sh dev",
    "skill:deploy:staging": "./scripts/deploy-skill.sh staging",
    "skill:deploy:prod": "./scripts/deploy-skill.sh prod",
    "skill:test": "ask dialog --locale en-US",
    "deploy:dev": "npm run validate:deployment && npm run build && npm run sam:build && npm run sam:deploy:dev",
    "deploy:staging": "npm run validate:deployment && npm run build && npm run sam:build && npm run sam:deploy:staging",
    "deploy:prod": "npm run validate:deployment && npm run build && npm run sam:build && npm run sam:deploy:prod",
    "deploy:full:dev": "npm run deploy:dev && npm run skill:deploy:dev",
    "deploy:full:staging": "npm run deploy:staging && npm run skill:deploy:staging",
    "deploy:full:prod": "npm run deploy:prod && npm run skill:deploy:prod"
  },
  "dependencies": {
    "ask-sdk-core": "^2.13.0",
    "ask-sdk-model": "^1.29.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1490.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.126",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": ["alexa", "skill", "llm", "openrouter", "typescript"],
  "author": "",
  "license": "MIT"
}